<div class="booyah-box col-10 offset-1">
  <h2>Sign up</h2>
  <br />
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <!--**Since email is displayed on the homepage, if you would like your real email to stay private, feel free to use a disposable email from here https://www.guerrillamail.com/** -->
      <br />
      <br />
      <!-- change 6 character minimum to be inside the box -->
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-danger' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>